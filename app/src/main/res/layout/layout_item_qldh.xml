<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:elevation="1dp"
    android:backgroundTint="@color/bg_ed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/tv_time_item_donHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latobold"
                android:text="time"
                android:textColor="@color/text_3"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:gravity="left"/>
            <TextView
                android:id="@+id/tv_trangThaiDH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latobold"
                android:text="trang thai"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/bg_btn"
                android:layout_gravity="right"/>


        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/nonused_ID_006"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/img_item_donHang"
                android:layout_width="120dp"
                android:layout_height="95dp"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_name_item_donHang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/nonused_ID_006"
            android:text="Hoddie"
            android:textSize="20sp"
            android:fontFamily="@font/latobold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/text_red"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"/>
        <TextView
            android:id="@+id/tv_item_quantity_donHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_color_donHang"
            android:textAlignment="center"
            android:layout_marginLeft="25dp"
            android:text="1"
            android:textSize="18sp"
            android:fontFamily="@font/latobold"
            android:textColor="@color/text_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/nonused_ID_006"
            />
        <TextView
            android:id="@+id/nonused_ID_014"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_color_donHang"
            android:textAlignment="center"
            android:text="x"
            android:textSize="24sp"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/font1_semibold"
            android:textColor="@color/text_2"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/tv_item_quantity_donHang"/>
        <TextView
            android:id="@+id/tv_item_size_donHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/latobold"
            android:gravity="left|center"
            android:text="Size: X"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_below="@+id/tv_name_item_donHang"
            android:layout_toEndOf="@+id/nonused_ID_006"/>
        <TextView
            android:id="@+id/tv_item_color_donHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/latobold"
            android:gravity="left|center"
            android:text="Màu sắc: Hồng"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_below="@+id/tv_item_size_donHang"
            android:layout_toEndOf="@+id/nonused_ID_006"/>
        <TextView
            android:id="@+id/tv_item_price_donHang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_color_donHang"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@+id/nonused_ID_014"
            android:fontFamily="@font/latobold"
            android:paddingLeft="5dp"
            android:text="25000"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_2"
            android:textSize="18sp" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_white" />
        <TextView
            android:id="@+id/tv_isMore_item_donHang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ 1 sản phẩm"
            android:fontFamily="@font/latobold"
            android:textColor="@color/text_2"
            android:gravity="center"
            android:minHeight="28dp"
            android:visibility="visible"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_white" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="35dp">
            <TextView
                android:id="@+id/nonused_ID_007"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng đơn:"
                android:fontFamily="@font/latobold"
                android:textColor="@color/text_4"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tv_total_P_item_donHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="đ300000"
                android:fontFamily="@font/latobold"
                android:textColor="@color/bg_btn"
                android:gravity="center"
                android:minHeight="28dp"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/nonused_ID_007"
                android:layout_centerVertical="true"
                />
            <FrameLayout
                android:id="@+id/btn_huyDon_item_donHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/latoblack"
                    android:text="Huỷ đơn"
                    android:textSize="14sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>