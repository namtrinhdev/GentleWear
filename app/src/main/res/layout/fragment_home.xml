<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.fragments.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/nonused_ID_005"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:cardCornerRadius="80dp"
            android:layout_centerVertical="true"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/avatar1"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/btnnoti"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="180dp"
            android:src="@drawable/baseline_notifications_none_24"
            android:layout_toLeftOf="@id/btnSearch"/>

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_search_24"
            android:layout_toLeftOf="@+id/btnmenu"/>

        <ImageView
            android:id="@+id/btnmenu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_menu_24"
            android:layout_alignParentEnd="true"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nonused_ID_005"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/latobold"
            android:textAllCaps="true"
            android:drawableRight="@drawable/baseline_menu_24"
            android:drawablePadding="8dp"
            android:text="@string/Filter"
            android:layout_margin="20dp"/>
        <Spinner
            android:id="@+id/spn_sort_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/nonused_ID_005"
            android:layout_margin="20dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_filter"
            />
<!--        them page tai day-->
    </RelativeLayout>

</ScrollView>