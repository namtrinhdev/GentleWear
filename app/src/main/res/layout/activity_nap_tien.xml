<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NapTienActivity">

    <TextView
        android:id="@+id/nonused_ID_005"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Nạp tiền"
        android:textColor="@color/text_normal"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img_backpress_naptien"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"

        android:padding="10dp"

        android:src="@drawable/back_icon" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ed_naptien"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/nonused_ID_005"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:textColor="@color/black"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_custom_2"
        android:fontFamily="@font/font1_semibold"
        android:hint="Số tiền nạp(VND)"
        android:inputType="number"
        android:paddingLeft="15dp"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/nonused_ID_006"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_naptien"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_100k"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_shape"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.000"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_200k"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_shape"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200.000"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_500k"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_shape"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500.000"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nonused_ID_007"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nonused_ID_006"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_1000k"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_shape"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.000.000"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_2000k"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_shape"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.000.000"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_5000k"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_shape"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.000.000"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/btn_pick_imgGD"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/nonused_ID_007"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edittext_shape"
        android:gravity="center"

        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_img_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh giao dịch"
            android:textColor="@color/black"
            android:textSize="15sp"

            android:layout_gravity="center"
            android:textStyle="bold" />
    </FrameLayout>

    <TextView
        android:id="@+id/nonused_ID_008"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_pick_imgGD"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="Chuyển khoản theo thông tin sau:\n
        \nNgân hàng TPBank\nSố tài khoản : 0327818176
        \nChủ tài khoản : TRINH DINH NAM
        \n\nHoặc quét mã QR :"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/img_qr"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_below="@+id/nonused_ID_008"
        android:layout_centerHorizontal="true"
        android:src="@drawable/my_qr" />
    <Button
        android:id="@+id/btn_post_naptien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_custom_1"
        android:text="Nạp tiền"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>