<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="1dp"
    android:layout_margin="10dp"
    android:backgroundTint="@color/bg_ed"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/nonused_ID_006"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/img_item_donHang_TT"
                android:layout_width="120dp"
                android:layout_height="95dp"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_item_namepro_donhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/nonused_ID_006"
            android:text="Hoddie"
            android:textSize="20sp"
            android:fontFamily="@font/latobold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/text_red"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"/>
        <TextView
            android:id="@+id/tv_item_quantity_donHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_color_donHang"
            android:textAlignment="center"
            android:layout_marginLeft="25dp"
            android:text="1"
            android:textSize="18sp"
            android:fontFamily="@font/latobold"
            android:textColor="@color/text_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/nonused_ID_006"
            />
        <TextView
            android:id="@+id/nonused_ID_014"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_color_donHang"
            android:textAlignment="center"
            android:text="x"
            android:textSize="24sp"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/font1_semibold"
            android:textColor="@color/text_2"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/tv_item_quantity_donHang"/>
        <TextView
            android:id="@+id/tv_item_size_donHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/latobold"
            android:gravity="left|center"
            android:text="Size: X"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_below="@+id/tv_item_namepro_donhang"
            android:layout_toEndOf="@+id/nonused_ID_006"/>
        <TextView
            android:id="@+id/tv_item_color_donHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/latobold"
            android:gravity="left|center"
            android:text="Màu sắc: Hồng"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_below="@+id/tv_item_size_donHang"
            android:layout_toEndOf="@+id/nonused_ID_006"/>
        <TextView
            android:id="@+id/tv_item_price_donHang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_color_donHang"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@+id/nonused_ID_014"
            android:fontFamily="@font/latobold"
            android:paddingLeft="5dp"
            android:text="25000"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_2"
            android:textSize="18sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>