<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:background="@drawable/border_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_spcart"
                android:layout_width="87dp"
                android:layout_height="77dp"
                android:layout_gravity="center|left"
                android:layout_marginLeft="20dp"
                android:background="#f1f4fb"
                android:scaleType="centerInside"
                android:src="@drawable/hoodie2" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:id="@+id/tv_namesp"
                    android:layout_width="110dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/latoblack"
                    android:gravity="center"
                    android:text="Printed Shirt"
                    android:textColor="#6342E8"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_item_size"
                    android:layout_width="140dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/latobold"
                    android:gravity="left|center"
                    android:text="Size: X"
                    android:textSize="13sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/tv_item_color"
                    android:layout_width="140dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/latobold"
                    android:gravity="left|center"
                    android:text="Màu sắc: Hồng"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_price_card"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/latoblack"

                    android:drawableLeft="@drawable/vnd_blue"
                    android:text="28"
                    android:textColor="@color/bg_btn"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                >
                <ImageView
                    android:id="@+id/img_item_remove_cart"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:background="@drawable/shape_diamon_red"
                    android:src="@drawable/sharp_remove_24"
                    android:layout_toRightOf="@+id/tv_item_quantity_cart"

                    android:padding="4dp"
                    />
                <TextView
                    android:id="@+id/tv_item_quantity_cart"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="1"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/bg_red"
                    android:layout_toRightOf="@+id/img_item_remove_cart"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/img_item_add_cart"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:background="@drawable/shape_diamon_red"
                    android:src="@drawable/sharp_add_24"
                    android:layout_toRightOf="@+id/nonused_ID_006"
                    android:padding="4dp"

                    />
            </LinearLayout>
<!--            <ImageView-->
<!--                android:id="@+id/btn_delete_item_card"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="38dp"-->
<!--                android:layout_gravity="top"-->

<!--                android:src="@drawable/rounded_close_24" />-->
        </LinearLayout>


    </LinearLayout>
</LinearLayout>