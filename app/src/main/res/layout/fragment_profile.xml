<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".views.fragments.ProfileFragment">

    <LinearLayout
        android:id="@+id/header3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/border_headpro"
        android:gravity="center|left"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="80dp">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/avatar1" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_name_Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/latoblack"
            android:text="Đỗ Thái"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header3"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="90dp"

        android:padding="10dp">

        <!--item1-->
        <RelativeLayout
            android:id="@+id/item1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/anh1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/baseline_settings_24" />

            <TextView
                android:id="@+id/chu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/anh1"
                android:layout_marginLeft="35dp"
                android:fontFamily="@font/latoblack"
                android:text="Thông tin cá nhân"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="160dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/baseline_arrow_forward_ios_24" />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/item1"
            android:background="@color/colorPrimary" />

        <!--item2-->
        <RelativeLayout
            android:id="@+id/item2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/item1"
            android:gravity="center|left"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/anh2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/baseline_shopping_cart_24" />

            <TextView
                android:id="@+id/chu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/anh2"
                android:layout_marginLeft="35dp"
                android:fontFamily="@font/latoblack"
                android:text="Đơn hàng của tôi"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="160dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/baseline_arrow_forward_ios_24" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/item2"
            android:background="@color/colorPrimary" />

        <!--item3-->
        <RelativeLayout
            android:id="@+id/item3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/item2"
            android:gravity="center|left"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/anh3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/baseline_edit_location_alt_24" />

            <TextView
                android:id="@+id/chu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/anh3"
                android:layout_marginLeft="35dp"
                android:fontFamily="@font/latoblack"
                android:text="Đổi địa chỉ"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="160dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/baseline_arrow_forward_ios_24" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/item3"
            android:background="@color/colorPrimary" />


        <!--        item4-->
        <RelativeLayout
            android:id="@+id/item4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/item3"
            android:gravity="center|left"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/anh4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/baseline_password_24" />

            <TextView
                android:id="@+id/chu4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/anh4"
                android:layout_marginLeft="35dp"
                android:fontFamily="@font/latoblack"
                android:text="Đổi mật khẩu"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="160dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/baseline_arrow_forward_ios_24" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/item4"
            android:background="@color/colorPrimary" />

        <!--        item5-->
        <RelativeLayout
            android:id="@+id/item5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/item4"
            android:gravity="center|left"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/anh5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/baseline_rate_review_24" />

            <TextView
                android:id="@+id/chu5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/anh5"
                android:layout_marginLeft="35dp"
                android:fontFamily="@font/latoblack"
                android:text="Đánh giá"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="160dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/baseline_arrow_forward_ios_24" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/item5"
            android:background="@color/colorPrimary" />

        <!--        item6-->

        <RelativeLayout
            android:id="@+id/item6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/item5"
            android:gravity="center|left"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/anh6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/baseline_contact_support_24" />

            <TextView
                android:id="@+id/chu6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/anh6"
                android:layout_marginLeft="35dp"
                android:fontFamily="@font/latoblack"
                android:text="Liên hệ"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="160dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/baseline_arrow_forward_ios_24" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/item6"
            android:background="@color/colorPrimary" />

        <FrameLayout
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item6"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="25dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_btn" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Đăng xuất"
                android:textAlignment="center"
                android:textColor="@color/bg_white"
                android:textSize="16sp" />
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>