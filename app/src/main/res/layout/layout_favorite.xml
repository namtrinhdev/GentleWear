<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="124dp"
        android:layout_weight="1"
        android:background="@drawable/border_bg"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/image_sp"
            android:layout_width="87dp"
            android:layout_height="77dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="20dp"
            android:background="#f1f4fb"
            android:scaleType="centerCrop"
            android:src="@drawable/shirt2" />


        <LinearLayout
            android:layout_width="165dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_namesp"
                android:layout_width="110dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/latoblack"
                android:gravity="center"
                android:text="Printed Shirt"
                android:textColor="#6342E8"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_motasp"
                android:layout_width="140dp"
                android:layout_height="27dp"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/latobold"
                android:gravity="center"
                android:text="GENTLE COLLECTION"
                android:textSize="13sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/latoblack"
                android:text="$28.00 USD"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/btn_chitiet"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="bottom|right"
                android:layout_marginTop="10dp"
                android:src="@drawable/baseline_arrow_forward_24" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>